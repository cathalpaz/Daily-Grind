{
  "manifest_version": 3,
  "name": "LeetCode Reminder",
  "version": "1.0",
  "description": "A Chrome extension to remind you to solve daily LeetCode problems.",
  "permissions": ["alarms", "activeTab", "storage, activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://leetcode.com/*"
  ]
}
